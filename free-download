<body>

    <div class="container">
        <!-- فرم -->
        <form id="myForm">
            <h3>ثبت اطلاعات</h3>
            
            <label for="name">نام و نام خانوادگی:</label>
            <input type="text" id="name" name="name" required placeholder="مثال: علی رضایی">

            <label for="mobile">شماره موبایل:</label>
            <!-- 
                pattern="09[0-9]{9}" 
                یعنی حتما با 09 شروع شود و بعدش 9 رقم عدد بیاید (مجموعا 11 رقم)
            -->
            <input type="tel" id="mobile" name="mobile" 
                   pattern="09[0-9]{9}" 
                   maxlength="11" 
                   inputmode="numeric"
                   required 
                   placeholder="09123456789"
                   title="لطفا شماره ۱۱ رقمی را به صورت صحیح وارد کنید (مثال: 09123456789)">

            <button type="submit" id="submitBtn">ارسال اطلاعات</button>
        </form>

        <!-- پیام موفقیت -->
        <div id="success-message">
            <span id="success-icon">✅</span>
            <span style="font-family: 'Lalezar', cursive; font-size: 20px;">با موفقیت ارسال شد</span>
            <p style="font-size: 13px;">اطلاعات شما در سیستم ثبت گردید.</p>
        </div>
    </div>

    <script>
        // آدرس وب‌هوک خود را اینجا قرار دهید
        const WEBHOOK_URL = "https://59650-4dfov.s5.irann8n.com/webhook/submit-form"; 

        const form = document.getElementById('myForm');
        const successMsg = document.getElementById('success-message');
        const submitBtn = document.getElementById('submitBtn');

        form.addEventListener('submit', function(e) {
            e.preventDefault(); // جلوگیری از رفرش شدن صفحه

            // تغییر دکمه به حالت "در حال ارسال..."
            const originalBtnText = submitBtn.innerText;
            submitBtn.innerText = "در حال ارسال...";
            submitBtn.disabled = true;

            // دریافت اطلاعات فرم
            const formData = new FormData(form);
            
            // ارسال به n8n
            fetch(WEBHOOK_URL, {
                method: 'POST',
                body: formData
            })
            .then(response => {
                // مخفی کردن فرم و نمایش پیام موفقیت
                form.style.display = 'none';
                successMsg.style.display = 'block';
            })
            .catch(error => {
                alert("خطایی رخ داد. لطفا دوباره تلاش کنید.");
                submitBtn.innerText = originalBtnText;
                submitBtn.disabled = false;
                console.error('Error:', error);
            });
        });
    </script>

